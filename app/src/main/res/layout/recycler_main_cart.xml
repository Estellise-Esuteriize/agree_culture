<?xml version="1.0" encoding="utf-8" ?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/menu_cart_photo"
        android:src="@drawable/ic_add_photo_alternate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/main_menu_product_list"
        android:layout_height="@dimen/main_menu_product_list" />


    <TextView
        android:background="@drawable/border_background"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        android:padding="3dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/menu_cart_status"
        android:text="@string/app_name"
        app:layout_constraintStart_toEndOf="@id/menu_cart_photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/menu_cart_addition"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/menu_cart_product_name"
        app:layout_constraintEnd_toStartOf="@id/menu_cart_addition"
        app:layout_constraintStart_toEndOf="@id/menu_cart_photo"
        app:layout_constraintTop_toBottomOf="@id/menu_cart_status"
        android:text="@android:string/selectTextMode"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:layout_marginEnd="30dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/default_web_client_id"
        android:id="@+id/menu_cart_desc"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@id/menu_cart_photo"
        app:layout_constraintTop_toBottomOf="@id/menu_cart_product_name"
        app:layout_constraintEnd_toStartOf="@id/menu_cart_minus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="5"/>

    
    <ImageView
        android:id="@+id/menu_cart_delete"
        android:src="@drawable/ic_delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30" />


    <ImageView
        android:id="@+id/menu_cart_addition"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="0dp"
        android:src="@drawable/ic_exposure_plus_1"
        app:layout_constraintBottom_toTopOf="@id/menu_cart_minus"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30" />


    <ImageView
        android:id="@+id/menu_cart_minus"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="0dp"
        android:src="@drawable/ic_exposure_neg_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30" />




</android.support.constraint.ConstraintLayout>