<?xml version="1.0" encoding="utf-8" ?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/order_buyer_product_photo"
        android:src="@drawable/ic_add_photo_alternate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/main_menu_product_list"
        android:layout_height="@dimen/main_menu_product_list" />


    <TextView
        android:background="@drawable/border_background"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        android:textSize="16sp"
        android:id="@+id/order_buyer_product_name"
        android:text="@string/app_name"
        app:layout_constraintStart_toEndOf="@id/order_buyer_product_photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/menu_cart_addition"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/order_buyer_product_quantity"
        app:layout_constraintTop_toBottomOf="@id/order_buyer_product_name"
        app:layout_constraintStart_toEndOf="@id/order_buyer_product_photo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="35dp"
        android:text="@string/app_name"
        android:layout_width="0dp"
        android:textSize="16sp"
        android:maxLines="2"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/app_name"
        android:id="@+id/order_buyer_product_price"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@id/order_buyer_product_photo"
        app:layout_constraintTop_toBottomOf="@id/order_buyer_product_quantity"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:textSize="15sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="@string/app_name"
        android:id="@+id/order_buyer_product_total"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@id/order_buyer_product_photo"
        app:layout_constraintTop_toBottomOf="@id/order_buyer_product_price"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:textSize="15sp"
        android:layout_height="wrap_content"/>



    <ImageView
        android:id="@+id/menu_order_cancel"
        android:src="@drawable/ic_delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30" />





</android.support.constraint.ConstraintLayout>